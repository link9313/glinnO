{# This extend the same file from core to add a sign-up/sign-in or "my account" link to the "home page" nav menu. #}
{% extends "@core/components/default/main-nav.html.twig" %}

{% block main_nav %}
    {{parent()}}
    <li>
        <a href="{{site.uri.public}}/nearby" class="nav-highlight">{{translate("Nearby")}}</a>
    </li>
    <li>
        <a href="{{site.uri.public}}/calendar" class="nav-highlight">{{translate("Calendar")}}</a>
    </li>
{% endblock %}

{% block secondary_nav %}
    {{parent()}}
    {% if not checkAuthenticated() %}
        <li>
            <a href="{{site.uri.public}}/account/sign-in-or-register" class="nav-highlight">{{translate("SIGNIN")}}</a>
        </li>
    {% else %}
        {% include "components/user-card.html.twig" %}
    {% endif %}
{% endblock %}
