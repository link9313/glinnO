{% extends "layouts/dashboard.html.twig" %}

{% block stylesheets_page %}
    <!-- Page-group-specific CSS asset bundle -->
    {{ assets.css('css/form-widgets') | raw }}
{% endblock %}

{# Overrides blocks in head of base template #}
{% block page_title %}{{translate("EVENT", 2)}} | {{event.name}}{% endblock %}

{% block page_description %}{{translate("EVENT.INFO_PAGE", {name: event.name})}}{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-lg-4">
            <div id="view-event" class="box box-primary">
                <div class="box-header">
                    <h2 class="box-title"><i class="fa fa-fw fa-calendar"></i> {{event.name}}</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="box-body">
                    {% include "components/forms/event.html.twig" %}
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div id="widget-events" class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-fw fa-calendar"></i> {{translate('EVENT', 2)}}</h3>
                    <div class="pull-right">
                        <button class="btn btn-sm btn-default js-download-table">{{ translate("DOWNLOAD.CSV") }}</button>
                    </div>
                </div>
                <div class="box-body">
                    {% include "components/tables/events.html.twig" with {
                            "table" : {
                                "id" : "table-event"
                            }
                        }
                    %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts_page %}
    <!-- Include page variables -->
    <script>
    {% include "components/page.js.twig" %}

    // Add name
    page = $.extend(
        true,               // deep extend
        {
            "name": "{{event.name}}"
        },
        page
    );
    </script>

    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}

    <!-- Include page-specific JS -->
    {{ assets.js('js/pages/event') | raw }}
{% endblock %}
