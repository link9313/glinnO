    <script>
        // Create calendar for population
        $(document).ready(function() {
            $('#calendar').fullCalendar({
                // Change header buttons based on screen size
                header: {
                    left: window.mobilecheck() ? 'title' : 'title',
                    center: window.mobilecheck() ? '' : 'prev,next today',
                    right: window.mobilecheck() ? 'prev,next today listMonth' : 'month,agendaWeek,agendaDay,listMonth'
                },

                defaultView: window.mobilecheck() ? "listMonth" : "month",
                handleWindowResize: false,
                navLinks: true, // can click day/week names to navigate views
                editable: false,
                eventLimit: true, // allow "more" link when too many events
                ignoreTimezone: true,

                eventClick:  function(event, jsEvent, view) {
                    if (event.url) {
                        $('#title').html(event.title);
                        $('#location').html(event.location);
                        $('#startTime').html(moment(event.start).format('MMM Do h:mm A'));
                        $('#endTime').html(moment(event.end).format('MMM Do h:mm A'));
                        $('#notes').html(event.description);
                        $('#urlText').html(event.url);
                        $('#url').attr("href", event.url);
                        $('#fullCalModal').modal();
                        return false;
                    } else {
                        $('#title').html(event.title);
                        $('#location').html(event.location);
                        $('#startTime').html(moment(event.start).format('MMM Do h:mm A'));
                        $('#endTime').html(moment(event.end).format('MMM Do h:mm A'));
                        $('#notes').html(event.description);
                        $('#fullCalModal').modal();
                    }
                },

                events: function (start, end, timezone, callback) {
                		$.ajax({
                    		url: "{{site.uri.public}}/events/list",
                        type: "GET",
                    		dataType: 'json',
                    		success: function (data) {
                    		    var events = [];
                    		    $.each(data.rows, function (index) {
                                events.push({
                                    "id": data.rows[index].id,
                                    "title": data.rows[index].name,
                                    "location": data.rows[index].location,
                                    "allDay": data.rows[index].all_day,
                                    "start": data.rows[index].start,
                                    "end": data.rows[index].end,
                                    "description": data.rows[index].notes,
                                    "url": data.rows[index].url
                        			  });
                    		    });
                    		    callback(events);
                    		},
                        error: function() {
                            $('#errorModal').modal();
                        }
                    });
                }
            });
        });
    </script>

