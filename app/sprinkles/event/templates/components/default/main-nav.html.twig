{# This extends the same file from admin to add page and sign-up link to the "home page" nav menu. #}
{% extends "@core/components/default/main-nav.html.twig" %}

{% block main_nav %}
    {{parent()}}
    {% if checkAccess('create_event') %}
    <li>
        <a href="{{site.uri.public}}/events" class="nav-highlight">{{translate("EVENT.CREATEC")}}</a>
    </li>
    {% endif %}
    <li>
        <a href="{{site.uri.public}}/events/map" class="nav-highlight">{{translate("Map")}}</a>
    </li>
    <li>
        <a href="{{site.uri.public}}/events/calendar" class="nav-highlight">{{translate("Calendar")}}</a>
    </li>
{% endblock %}

{% block secondary_nav %}
    {{parent()}}
    {% if not checkAuthenticated() %}
        <li>
            <a href="{{site.uri.public}}/account/sign-in" class="nav-highlight">{{translate("SIGNIN")}}</a>
        </li>
        <li>
            <a href="{{site.uri.public}}/account/register" class="nav-highlight">{{translate("REGISTER")}}</a>
        </li>
    {% else %}
        {% include "components/user-card.html.twig" %}
    {% endif %}
{% endblock %}
